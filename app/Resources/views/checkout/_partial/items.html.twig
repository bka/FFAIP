<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Sku</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Rowtotal</th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.name }}</td>
            <td>{{ item.sku }}</td>
            <td>{{ item.qty }}</td>
            <td>{{ item.price }}</td>
            <td>{{ item.price * item.qty }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">No Items in Cart.</td>
        </tr>
    {% endfor %}
    <tbody>
</table>